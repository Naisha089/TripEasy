<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cities"
    android:orientation="vertical"
    tools:ignore="ScrollViewCount">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="TripEasy"
        app:titleMarginStart="40dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/hey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Where are we"
        android:textColor="#212121"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/hey1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:text="going today?"
        android:textSize="35sp"
        android:textColor="#757575"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="310dp"
                android:layout_height="360dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/dhaka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dhaka"
                        app:shapeAppearanceOverlay="@style/roundimageview"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="DHAKA"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="39sp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_marginLeft="90dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="310dp"
                android:layout_height="360dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/chittagong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/chittagong"
                        app:shapeAppearanceOverlay="@style/roundimageview"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="CHITTAGONG"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="39sp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_marginLeft="40dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="310dp"
                android:layout_height="360dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/khulna"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/khulna"
                        app:shapeAppearanceOverlay="@style/roundimageview"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="KHULNA"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="39sp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_marginLeft="90dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="310dp"
                android:layout_height="360dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/shylet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/shylet"
                        app:shapeAppearanceOverlay="@style/roundimageview"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="SHYLET"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="39sp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/black"
                        android:layout_marginLeft="90dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>